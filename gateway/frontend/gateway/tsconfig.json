{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext", "webworker"],
    "types": ["vite/client"],
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "services": ["src/services/index.ts"],
      "components": ["src/lib/components/index.ts"],
      "toolkit": ["src/lib/toolkit/index.ts"],
      "gateway-ts": ["src/assets/gateway.did.d.ts"],
      "gateway-idl": ["src/assets/gateway.did.js"],
      "deployer-ts": ["src/assets/union-deployer.did.d.ts"],
      "deployer-idl": ["src/assets/union-deployer.did.js"],
      "wallet-ts": ["src/assets/union-wallet.did.d.ts"],
      "wallet-idl": ["src/assets/union-wallet.did.js"]
    }
  },
  "include": ["global.d.ts", "."]
}
